swiper {
  flex: 1;
  height: 400rpx;
  width: 100%;
}
.slide-image{
    width: 100%;  
}
.news_wrap{
  background-color: #dddddd;
  padding: 20rpx;
}
.news_box{
  display: flex;
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  align-items: center;
  border-radius: 10rpx;
}
.img{
  flex: 1;
  padding: 0 5rpx;
  height: 140rpx;
}
.img image{
  width: 100%;
  height: 100%;
}
.news_title{
  flex: 3;
  padding: 0 10rpx;
  font-size: 32rpx;
}
.btn{
  background-color: #dddddd;
  padding-top: 20rpx; 
  padding-bottom: 40rpx;
}
.more{ 
  width: 90%;
  margin-left: 5%;
}